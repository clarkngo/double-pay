<!DOCTYPE html>
<html>
  <head>
    <title>DoublePay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Double Pay</a>
      <button class="navbar-toggler" 
              type="button" 
              data-toggle="collapse"       
              data-target="#navbarSupportedContent" 
              aria-controls="navbarSupportedContent" 
              aria-expanded="false" 
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to 'Staff', '', class: 'nav-link' %>
          </li>
        </ul>
        <ul class="navbar-nav justify-content-end">
            <% if user_signed_in? %>
              <li class="nav-item">
                <div class="dropdown show dropleft">
                  <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <% if current_user.avatar? %>
                      <%= image_tag current_user.avatar.thumb.url, class: 'profile-image' %>
                    <% else %>
                      <%= image_tag 'default-profile-picture-50x50.png', class: 'profile-image' %>
                    <% end %>
                  </a>
               
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <%= link_to "New Course", '', class: 'dropdown-item' %>
                    <div class="dropdown-divider"></div>
                    <%= link_to "My Profile", edit_user_registration_path, class: 'dropdown-item' %>
                    <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'dropdown-item' %>
                  </div>
                </div>
              </li>       
            <% else %>
              <li class='nav-item'>
                <%= link_to "Sign up", new_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="divider-vertical"></li>
              <li class='nav-item'>
                <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    </br>   
    </br>
    <div class="container" style="text-align:center;">
      <div class="booyah-box">
        <h2>Survey</h2>
        </br>

        <%= link_to 'Business', 'https://mansoorsayed.typeform.com/to/Jg8KHy', class: 'btn btn-primary btn-lg btn-block' %>
        </br>
        </br>
        </br>
        <%= link_to 'Staff', 'https://mansoorsayed.typeform.com/to/I8CXvd', class: 'btn btn-warning btn-lg btn-block' %>
      </div>
    </div>
    <nav class="navbar fixed-bottom navbar-light bg-light">
      <a class="navbar-brand" href="#"></a>
    </nav>
    <div class='container'>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </div>
  </body>
</html>
